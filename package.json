{
	"name": "root",
	"version": "1.1.0-alpha.3",
	"private": true,
	"main": "dist/index.js",
	"license": "MIT",
	"workspaces": [
		"packages/core",
		"packages/loader"
	],
	"scripts": {
		"publish:_git": "node ./scripts/publish-git.js",
		"publish:git": "run-s build publish:_git",
		"prettify": "prettier --config ./.prettierrc.yml \"**/*.{json,js,ts}\"",
		"prettify:fix": "prettier --config ./.prettierrc.yml --write \"**/*.{json,js,ts}\"",
		"lint": "yarn run eslint --ext js,jsx,ts,tsx -c .eslintrc.js ./",
		"lint:fix": "run-s \"lint --fix\"",
		"// required scripts: build, ci": "",
		"build": "yarn workspaces foreach run build",
		"ci": "yarn workspaces foreach run ci",
		"_cd:pub": "yarn workspaces foreach npm publish",
		"cd": "yarn run run-s build _cd:pub"
	},
	"devDependencies": {
		"@types/jest": "^26.0.13",
		"@typescript-eslint/eslint-plugin": "^4.0.1",
		"@typescript-eslint/parser": "^4.0.1",
		"@yarnpkg/pnpify": "^2.2.1",
		"debug": "^4.2.0",
		"eslint": "^7.8.1",
		"eslint-config-prettier": "^6.11.0",
		"eslint-plugin-eslint-comments": "^3.2.0",
		"eslint-plugin-import": "^2.22.0",
		"eslint-plugin-jest": "^24.0.0",
		"eslint-plugin-jsx-a11y": "^6.3.1",
		"eslint-plugin-react": "^7.20.6",
		"eslint-plugin-react-hooks": "^4.1.0",
		"execa": "^4.0.3",
		"gh-pages": "^3.1.0",
		"husky": "^4.2.5",
		"jest": "^26.4.2",
		"lint-staged": "^10.3.0",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.1.1",
		"react": "^16.13.1",
		"ts-jest": "^26.3.0",
		"tslint": "^6.1.3",
		"tslint-config-airbnb": "^5.11.2",
		"tslint-config-prettier": "^1.18.0",
		"tslint-react": "^5.0.0",
		"typescript": "^4.0.2"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"**/*.{ts}": [
			"yarn run lint:fix",
			"git add"
		],
		"**/*.{js,json,md}": [
			"prettier --config ./.prettierrc.yml --write",
			"git add"
		]
	},
	"dependenciesMeta": {
		"@sv-pool/registry": {
			"unplugged": true
		},
		"@svc-pool/registry": {
			"unplugged": true
		}
	}
}
